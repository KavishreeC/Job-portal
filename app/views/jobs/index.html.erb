<div class="container">
<h1 class="d-flex justify-content-center">Job List</h1>
 
<table class="table table-bordered">
  <thead class='table-dark'>
    <tr>
      <th>Name </th>
      <th>Position </th>
      <th>Description </th>
      <th>Vacancy </th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.name %></td>
        <td><%= job.position %></td>
        <td><%= job.desc %></td>
        <td><%= job.count %></td>
        <td><%= link_to 'Show', job , class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_job_path(job),class:"btn btn-primary" %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path , class: "btn btn-primary" %>
</div>