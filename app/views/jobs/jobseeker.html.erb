<div id="job_seeker">
  <div class="container">
    <p class="d-flex justify-content-center" id="heading"><%= t('.jobdetails') %></p>
    <% @jobs.each do |job| %>
      <ul class="list-group">
        <li class="list-group-item align-items-center">
          <div id="job_details">
            <span><%= t('.banner')  %> : </span><%= image_tag(job.banner_url.to_s, :size => "100x50") if job.banner?   %><br>
            <span><%= t('.companyname')  %> : </span> <%= job.name %><br>
            <span><%= t('.position')  %> :  </span><%= job.position %><br>
            <span><%= t('.jobdesc')  %> : </span><%= job.desc %><br>
            <span><%= t('.vacancy')  %> : </span><%= job.count %><br><br>
            <% if job.has_applied?(current_user,job.id) %>
              <%= button_to t('.applied')  ,apply_path(job_id: job.id,job_name: job.name,job_position: job.position),method: "post", disabled: true,class:"btn applied_btn" %>
            <% else %>
              <%= button_to t('.apply')  ,apply_path(job_id: job.id,job_name: job.name,job_position: job.position),method: "post" ,class:"btn apply_btn"%>
            <% end %>
          </div>
        </li>
      </ul> 
    <% end %>
  </div>
</div>
